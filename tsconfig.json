{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "rootDir": "",
    "esModuleInterop": true,
    "skipLibCheck": false,
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "index.js",
  ],
  "exclude": [
    "./node_modules"
  ]
}